<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- configure record reader -->
    <bean id="greetingReader" class="io.github.benas.easybatch.flatfile.FlatFileRecordReader">
        <constructor-arg value="classpath:greetings.csv"/>
    </bean>

    <!-- configure record mapper -->
    <bean id="greetingMapper" class="io.github.benas.easybatch.flatfile.dsv.DelimitedRecordMapper">
        <constructor-arg>
            <value type="java.lang.Class">io.github.benas.easybatch.tutorials.common.Greeting</value>
        </constructor-arg>
        <constructor-arg>
            <list>
                <value>sequence</value>
                <value>name</value>
            </list>
        </constructor-arg>
    </bean>

    <!-- configure record processor -->
    <bean id="greetingProcessor" class="io.github.benas.easybatch.tutorials.common.GreetingProcessor"/>

    <!-- configure Easy Batch engine -->
    <bean id="easyBatchEngine" class="io.github.benas.easybatch.tools.spring.EasyBatchFactoryBean">
        <property name="recordReader" ref="greetingReader"/>
        <property name="recordMapper" ref="greetingMapper"/>
        <property name="recordProcessor" ref="greetingProcessor"/>
    </bean>

</beans>
